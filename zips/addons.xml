<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.flixkodi" name="FlixKodi Repository" version="1.0.2" provider-name="FlixKodi">
    <extension point="xbmc.addon.repository">
        <dir minversion="21.0">
            <info compressed="false">https://raw.githubusercontent.com/FlixStudioss/FlixKodi/main/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/FlixStudioss/FlixKodi/main/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/FlixStudioss/FlixKodi/main/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>FlixKodi Repository</summary>
        <description>Official repository for FlixKodi addons including FlixWizard</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
<addon id="plugin.program.flixwizard" name="[COLOR limegreen]Flix[/COLOR]Wizard" version="1.0.0" provider-name="FlixKodi">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR limegreen]Flix[/COLOR]Wizard</summary>
        <description lang="en">[COLOR limegreen]Flix[/COLOR]Wizard offers many maintenance features, selective add-on data saving, and automated build installs.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://github.com/FlixStudioss/FlixKodi/tree/main/FlixKodi/plugin.program.flixwizard</source>
        <news>
1.0.0
 - Initial FlixWizard release for Kodi 21 (Omega)
 - Forked from OpenWizard
        </news>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
<addon id="plugin.video.flixbalkan" name="[B][COLOR limegreen]Flix[/B][COLOR white]Balkan[/COLOR]" version="2.0.0" provider-name="FlixStudios">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" version="2.22.0"/>
	<import addon="script.module.resolveurl" version="5.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="resources/lib/addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>FlixBalkan Video Addon</summary>
    <description>FlixBalkan Video Addon - Balkan Content Streaming</description>
    <platform>all</platform>
	<assets>
    <icon>logo.png</icon>
    </assets>
  </extension>
</addon></addons>
